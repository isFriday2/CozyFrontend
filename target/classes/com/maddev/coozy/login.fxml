<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.maddev.coozy.controller.LoginController">
    <VBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <Label alignment="CENTER" text="Login" underline="true">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </Label>
        <HBox alignment="CENTER" spacing="10">
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                <Label text="Coozy:">
                    <padding>
                        <Insets left="15.0" top="15.0" />
                    </padding>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font>
                </Label>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../../java/com/maddev/coozy/images/login.jpg" />
                    </image>
                    <VBox.margin>
                        <Insets left="15.0" />
                    </VBox.margin>
                </ImageView>
            </VBox>
            <VBox alignment="CENTER" spacing="10">
                <!-- Username Label and TextField -->
                <VBox spacing="5.0">
                    <Label text="Username:" />
                    <TextField fx:id="usernameField" minWidth="100" />
                    <Label text="Password:" />
                    <PasswordField fx:id="passwordField" minWidth="100" />
                    <Button fx:id="loginButton" onAction="#handleLoginButtonAction" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Login">
                  <VBox.margin>
                     <Insets left="48.0" />
                  </VBox.margin></Button>
                </VBox>
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
            </VBox>
        </HBox>
        <Hyperlink text="Don't have an account? Register Now" textAlignment="CENTER">
            <padding>
                <Insets bottom="10.0" />
            </padding>
        </Hyperlink>
    </VBox>
</AnchorPane>
