<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:controller="com.maddev.coozy.controller.leaderboard.LeaderboardEntryController"
            xmlns:fx="http://javafx.com/javafx/20" style="-fx-background-color: white; -fx-background-radius: 10;">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
        <ImageView fx:id="profileImageView" fitHeight="40" fitWidth="40"/>
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label fx:id="nameLabel" style="-fx-font-weight: bold;"/>
            <Label fx:id="roleLabel" style="-fx-text-fill: #888888;"/>
        </VBox>
        <Label fx:id="scoreLabel" style="-fx-font-size: 18px;"/>
    </HBox>
</AnchorPane>