<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:controller="com.maddev.coozy.controller.resident.ResidentListController"
            xmlns:fx="http://javafx.com/javafx/20" style="-fx-background-color: white; -fx-background-radius: 10;">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TableView fx:id="residentTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" prefWidth="50"/>
            <TableColumn text="Name" fx:id="nameColumn" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Name"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Add" fx:id="addButton"/>
        <Button text="Edit" fx:id="editButton"/>
        <Button text="Delete" fx:id="deleteButton"/>
    </HBox>
</VBox>
