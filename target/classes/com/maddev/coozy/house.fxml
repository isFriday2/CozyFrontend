<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.maddev.coozy.controller.chore.HouseController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Create a House"/>
    <TextField fx:id="houseNameField" promptText="House Name"/>
    <TextField fx:id="addressField" promptText="House Address"/>

    <Button text="Create House" onAction="#createHouse"/>

    <Label text="Join a House"/>
    <TextField fx:id="joinHouseNameField" promptText="House Name"/>

    <Button text="Join House" onAction="#joinHouse"/>

    <Label fx:id="statusLabel" text="Status: Not Joined" />
</VBox>
